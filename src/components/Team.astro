---
import Teammate from "./Teammate.astro";
import checkIcon from "../images/icons/check.svg";
import userIcon from "../images/icons/user.svg";
import trophyIcon from "../images/icons/trophy.svg";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

const { data: teamData } = await getEntry("teammates", "teammates");
const { team } = teamData;

interface ITeammate {
  id: number;
  image: string;
  name: string;
  area: string;
  slogan: string;
}
---

<section class="bg-gray pt-12 px-0 pb-24">
  <div class="container grid grid-cols-1 gap-5 lg:grid-cols-[1fr_2fr_auto]">
    <div class="info">
      <h2>We are proud of our design team</h2>
      <p>
        Just sit back and relax while we take care of your business needs for
        you.
      </p>
    </div>
    <div class="flex flex-wrap gap-24">
      <div class="flex flex-col items-center text-center md:gap-3 flex-1">
        <div class="bg-skyblue p-4 w-fit rounded-full">
          <Image src={checkIcon} class="h-[26px]" alt="Check" />
        </div>
        <h3 class="text-[41px]">1000+</h3>
        <p>Completed Projects</p>
      </div>
      <div class="flex flex-col items-center text-center">
        <div class="bg-skyblue p-4 w-fit rounded-full">
          <Image src={userIcon} class="h-[26px]" alt="User" />
        </div>
        <h3 class="text-[41px]">50k</h3>
        <p>Happy cutomers</p>
      </div>
      <div class="flex flex-col items-center text-center">
        <div class="bg-skyblue p-4 w-fit rounded-full">
          <Image src={trophyIcon} class="h-[26px]" alt="Trophy" />
        </div>
        <h3 class="text-[41px]">20k</h3>
        <p>Awards won</p>
      </div>
    </div>
    <div
      class="grid gap-5 grid-cols-1 col-span-full md:grid-cols-2 lg:grid-cols-4"
    >
      {team.map((item: ITeammate) => <Teammate {...item} />)}
    </div>
  </div>
</section>
